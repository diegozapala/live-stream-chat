<div class="container">
  <div class="row form-group">
    <div class="col-xs-12 col-md-offset-2 col-md-8 col-lg-8 col-lg-offset-2">
      <div class="panel panel-primary">

        <div class="panel-heading">
          <span class="glyphicon glyphicon-comment"></span> Coment√°rios
        </div>

        <div class="panel-body body-panel">
          <ul class="chat">
            <%= render partial: "message", locals: { messages: @messages }  %>
          </ul>
        </div>

        <div class="panel-footer clearfix">
          <%= form_tag(add_chat_message_path(@live_stream), :id => "new_message_form") do %>

            <%= text_area_tag "message", nil, class: "form-control", rows: "3" %>

            <span class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12" style="margin-top: 10px">
              <%= button_tag "Enviar", id: "btn-chat", class: "btn btn-warning btn-lg btn-block", data: { disable_with: "Aguarde..." } %>
            </span>

          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>

